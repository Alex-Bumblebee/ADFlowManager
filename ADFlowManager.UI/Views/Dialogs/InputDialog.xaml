<Window
    x:Class="ADFlowManager.UI.Views.Dialogs.InputDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Saisie"
    Width="500"
    SizeToContent="Height"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize"
    Background="#1E1E1E">

    <StackPanel Margin="24">
        <TextBlock
            x:Name="PromptText"
            Text=""
            FontSize="14"
            Foreground="#F5F5F5"
            TextWrapping="Wrap"
            Margin="0,0,0,16" />

        <ui:TextBox
            x:Name="InputTextBox"
            PlaceholderText=""
            Background="#2D2D30"
            Foreground="#F5F5F5"
            BorderBrush="#3F3F46"
            Height="44"
            FontSize="14"
            Margin="0,0,0,20"
            KeyDown="InputTextBox_KeyDown" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <ui:Button
                Content="Annuler"
                Appearance="Secondary"
                Click="CancelButton_Click"
                Height="36"
                Padding="24,0"
                Margin="0,0,8,0" />
            <ui:Button
                Content="Valider"
                Appearance="Primary"
                Click="OkButton_Click"
                Height="36"
                Padding="24,0" />
        </StackPanel>
    </StackPanel>
</Window>
