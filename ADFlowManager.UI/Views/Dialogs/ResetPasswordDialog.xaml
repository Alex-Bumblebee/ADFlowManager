<ui:FluentWindow
    x:Class="ADFlowManager.UI.Views.Dialogs.ResetPasswordDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:local="clr-namespace:ADFlowManager.UI.Views.Dialogs"
    xmlns:converters="clr-namespace:ADFlowManager.UI.Converters"
    Title="Réinitialiser le mot de passe"
    Width="450"
    Height="520"
    d:DesignHeight="380"
    d:DesignWidth="450"
    ExtendsContentIntoTitleBar="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize"
    mc:Ignorable="d">

    <ui:FluentWindow.Resources>
        <converters:StringToVisibilityConverter x:Key="NullOrEmptyToVisibilityConverter" />
    </ui:FluentWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- === CONTENT === -->
        <Grid Grid.Row="1" Margin="24,0,24,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Subtitle -->
            <TextBlock
                Grid.Row="0"
                FontSize="14"
                Foreground="#A1A1AA"
                Margin="0,0,0,16">
                <Run Text="Utilisateur : " />
                <Run Text="{Binding UserDisplayName}" FontWeight="SemiBold" Foreground="#8B5CF6" />
            </TextBlock>

            <!-- Form -->
            <StackPanel Grid.Row="1">
                <!-- New password -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Nouveau mot de passe *" FontSize="12" Foreground="#A1A1AA" Margin="0,0,0,4" />
                    <ui:PasswordBox
                        x:Name="NewPasswordBox"
                        PlaceholderText="Minimum 8 caractères"
                        Background="#2D2D30"
                        Foreground="#F5F5F5"
                        BorderBrush="#3F3F46"
                        Height="40"
                        PasswordChanged="NewPasswordBox_PasswordChanged" />
                </StackPanel>

                <!-- Confirm password -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Confirmer le mot de passe *" FontSize="12" Foreground="#A1A1AA" Margin="0,0,0,4" />
                    <ui:PasswordBox
                        x:Name="ConfirmPasswordBox"
                        PlaceholderText="Retapez le mot de passe"
                        Background="#2D2D30"
                        Foreground="#F5F5F5"
                        BorderBrush="#3F3F46"
                        Height="40"
                        PasswordChanged="ConfirmPasswordBox_PasswordChanged" />
                </StackPanel>

                <!-- Génération de mot de passe -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Générer un mot de passe" FontSize="12" Foreground="#A1A1AA" Margin="0,0,0,8" />
                    <StackPanel Orientation="Horizontal">
                        <ui:Button
                            Content="Classique (12 car.)"
                            Appearance="Secondary"
                            Command="{Binding GenerateClassicCommand}"
                            Height="32"
                            Padding="12,0"
                            FontSize="12"
                            Margin="0,0,8,0">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="ShieldKeyhole24" FontSize="14" />
                            </ui:Button.Icon>
                        </ui:Button>
                        <ui:Button
                            Content="Simple (Mot+123@)"
                            Appearance="Secondary"
                            Command="{Binding GenerateSimpleCommand}"
                            Height="32"
                            Padding="12,0"
                            FontSize="12">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="Lightbulb24" FontSize="14" />
                            </ui:Button.Icon>
                        </ui:Button>
                    </StackPanel>

                    <!-- Mot de passe généré (visible pour copier) -->
                    <Border
                        Background="#1A8B5CF6"
                        CornerRadius="6"
                        Padding="12,8"
                        Margin="0,8,0,0"
                        Visibility="{Binding GeneratedPasswordDisplay, Converter={StaticResource NullOrEmptyToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Eye24" FontSize="14" Foreground="#8B5CF6" Margin="0,0,8,0" />
                            <TextBlock
                                Text="{Binding GeneratedPasswordDisplay}"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Foreground="#8B5CF6"
                                IsHitTestVisible="True"
                                Cursor="Hand"
                                ToolTip="Cliquez pour copier"
                                MouseLeftButtonDown="GeneratedPassword_Click" />
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Options -->
                <CheckBox
                    IsChecked="{Binding MustChangePasswordNextLogon}"
                    Content="Doit changer le mot de passe à la prochaine connexion"
                    Foreground="#F5F5F5"
                    FontSize="13" />
            </StackPanel>

            <!-- Footer -->
            <Border
                Grid.Row="2"
                BorderBrush="#3F3F46"
                BorderThickness="0,1,0,0"
                Padding="0,12,0,0">

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <ui:Button
                        Content="Annuler"
                        Appearance="Secondary"
                        Click="CancelButton_Click"
                        Height="36"
                        Padding="20,0"
                        Margin="0,0,8,0" />

                    <ui:Button
                        Content="Réinitialiser"
                        Appearance="Primary"
                        Click="ResetButton_Click"
                        IsEnabled="{Binding CanReset}"
                        Height="36"
                        Padding="20,0">
                        <ui:Button.Icon>
                            <ui:SymbolIcon Symbol="Key24" />
                        </ui:Button.Icon>
                    </ui:Button>
                </StackPanel>
            </Border>
        </Grid>

        <!-- === TITLEBAR === -->
        <ui:TitleBar
            x:Name="TitleBar"
            Title="Réinitialiser le mot de passe"
            Grid.Row="0"
            CloseWindowByDoubleClickOnIcon="True">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Assets/logo.png" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>
    </Grid>
</ui:FluentWindow>
