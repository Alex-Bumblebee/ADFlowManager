<ui:FluentWindow
    x:Class="ADFlowManager.UI.Views.Dialogs.CompareUsersDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:local="clr-namespace:ADFlowManager.UI.Views.Dialogs"
    Title="Comparaison d'utilisateurs"
    Width="1100"
    Height="700"
    d:DesignHeight="700"
    d:DesignWidth="1100"
    ExtendsContentIntoTitleBar="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- === CONTENT === -->
        <Grid Grid.Row="1" Margin="24,0,24,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- ============================================ -->
            <!-- HEADER : User 1  ⇄  User 2                  -->
            <!-- ============================================ -->
            <Grid Grid.Row="0" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- User 1 (Bleu) -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border
                        Width="56"
                        Height="56"
                        Background="#3B82F6"
                        CornerRadius="28"
                        Margin="0,0,14,0">
                        <TextBlock
                            Text="{Binding User1Initials}"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="White"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock
                            Text="{Binding User1DisplayName}"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#F5F5F5" />
                        <TextBlock
                            Text="{Binding User1UserName}"
                            FontSize="13"
                            Foreground="#A1A1AA"
                            Margin="0,4,0,0" />
                    </StackPanel>
                </StackPanel>

                <!-- VS Icon -->
                <ui:SymbolIcon
                    Grid.Column="1"
                    Symbol="ArrowSync24"
                    FontSize="32"
                    Foreground="#8B5CF6"
                    Margin="24,0" />

                <!-- User 2 (Orange) -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Border
                        Width="56"
                        Height="56"
                        Background="#F97316"
                        CornerRadius="28"
                        Margin="0,0,14,0">
                        <TextBlock
                            Text="{Binding User2Initials}"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="White"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock
                            Text="{Binding User2DisplayName}"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="#F5F5F5" />
                        <TextBlock
                            Text="{Binding User2UserName}"
                            FontSize="13"
                            Foreground="#A1A1AA"
                            Margin="0,4,0,0" />
                    </StackPanel>
                </StackPanel>
            </Grid>

            <!-- ============================================ -->
            <!-- 3 COLONNES : Unique 1 | Communs | Unique 2   -->
            <!-- ============================================ -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="12" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="12" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- ===== COLONNE GAUCHE : User 1 uniquement (Bleu) ===== -->
                <Border
                    Grid.Column="0"
                    Background="#1E1E1E"
                    BorderBrush="#3F3F46"
                    BorderThickness="1"
                    CornerRadius="8"
                    ClipToBounds="True">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border Grid.Row="0" Background="#203B82F6" Padding="14,10">
                            <Grid>
                                <TextBlock
                                    Text="Uniquement"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="#3B82F6"
                                    VerticalAlignment="Center" />
                                <Border
                                    Background="#3B82F6"
                                    CornerRadius="10"
                                    Padding="8,3"
                                    HorizontalAlignment="Right">
                                    <TextBlock FontSize="12" FontWeight="Bold" Foreground="White">
                                        <Run Text="{Binding User1UniqueCount, Mode=OneWay}" />
                                    </TextBlock>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Groups list -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding User1UniqueGroups}" Margin="10">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Background="#103B82F6"
                                            BorderBrush="#3B82F6"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="10,8"
                                            Margin="0,0,0,6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <ui:SymbolIcon
                                                    Grid.Column="0"
                                                    Symbol="PeopleTeam16"
                                                    FontSize="14"
                                                    Foreground="#3B82F6"
                                                    Margin="0,0,8,0"
                                                    VerticalAlignment="Center" />

                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock
                                                        Text="{Binding GroupName}"
                                                        FontSize="12"
                                                        FontWeight="SemiBold"
                                                        Foreground="#F5F5F5"
                                                        TextTrimming="CharacterEllipsis" />
                                                    <TextBlock
                                                        Text="{Binding Description}"
                                                        FontSize="10"
                                                        Foreground="#71717A"
                                                        TextTrimming="CharacterEllipsis"
                                                        Margin="0,2,0,0" />
                                                </StackPanel>

                                                <!-- Copy to User 2 -->
                                                <ui:Button
                                                    Grid.Column="2"
                                                    Appearance="Transparent"
                                                    Width="28"
                                                    Height="28"
                                                    Padding="0"
                                                    ToolTip="Copier vers User 2"
                                                    Command="{Binding DataContext.CopyToUser2Command, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}">
                                                    <ui:Button.Icon>
                                                        <ui:SymbolIcon Symbol="ArrowRight24" FontSize="14" Foreground="#3B82F6" />
                                                    </ui:Button.Icon>
                                                </ui:Button>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- ===== COLONNE CENTRE : Communs (Violet) ===== -->
                <Border
                    Grid.Column="2"
                    Background="#1E1E1E"
                    BorderBrush="#3F3F46"
                    BorderThickness="1"
                    CornerRadius="8"
                    ClipToBounds="True">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border Grid.Row="0" Background="#208B5CF6" Padding="14,10">
                            <Grid>
                                <TextBlock
                                    Text="Communs"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="#8B5CF6"
                                    VerticalAlignment="Center" />
                                <Border
                                    Background="#8B5CF6"
                                    CornerRadius="10"
                                    Padding="8,3"
                                    HorizontalAlignment="Right">
                                    <TextBlock FontSize="12" FontWeight="Bold" Foreground="White">
                                        <Run Text="{Binding CommonGroupsCount, Mode=OneWay}" />
                                    </TextBlock>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Groups list -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding CommonGroups}" Margin="10">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Background="#108B5CF6"
                                            BorderBrush="#8B5CF6"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="10,8"
                                            Margin="0,0,0,6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <ui:SymbolIcon
                                                    Grid.Column="0"
                                                    Symbol="Checkmark24"
                                                    FontSize="14"
                                                    Foreground="#8B5CF6"
                                                    Margin="0,0,8,0"
                                                    VerticalAlignment="Center" />

                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock
                                                        Text="{Binding GroupName}"
                                                        FontSize="12"
                                                        FontWeight="SemiBold"
                                                        Foreground="#F5F5F5"
                                                        TextTrimming="CharacterEllipsis" />
                                                    <TextBlock
                                                        Text="{Binding Description}"
                                                        FontSize="10"
                                                        Foreground="#71717A"
                                                        TextTrimming="CharacterEllipsis"
                                                        Margin="0,2,0,0" />
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- ===== COLONNE DROITE : User 2 uniquement (Orange) ===== -->
                <Border
                    Grid.Column="4"
                    Background="#1E1E1E"
                    BorderBrush="#3F3F46"
                    BorderThickness="1"
                    CornerRadius="8"
                    ClipToBounds="True">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Border Grid.Row="0" Background="#20F97316" Padding="14,10">
                            <Grid>
                                <TextBlock
                                    Text="Uniquement"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Foreground="#F97316"
                                    VerticalAlignment="Center" />
                                <Border
                                    Background="#F97316"
                                    CornerRadius="10"
                                    Padding="8,3"
                                    HorizontalAlignment="Right">
                                    <TextBlock FontSize="12" FontWeight="Bold" Foreground="White">
                                        <Run Text="{Binding User2UniqueCount, Mode=OneWay}" />
                                    </TextBlock>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Groups list -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding User2UniqueGroups}" Margin="10">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Background="#10F97316"
                                            BorderBrush="#F97316"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="10,8"
                                            Margin="0,0,0,6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <!-- Copy to User 1 -->
                                                <ui:Button
                                                    Grid.Column="0"
                                                    Appearance="Transparent"
                                                    Width="28"
                                                    Height="28"
                                                    Padding="0"
                                                    Margin="0,0,8,0"
                                                    ToolTip="Copier vers User 1"
                                                    Command="{Binding DataContext.CopyToUser1Command, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}">
                                                    <ui:Button.Icon>
                                                        <ui:SymbolIcon Symbol="ArrowLeft24" FontSize="14" Foreground="#F97316" />
                                                    </ui:Button.Icon>
                                                </ui:Button>

                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock
                                                        Text="{Binding GroupName}"
                                                        FontSize="12"
                                                        FontWeight="SemiBold"
                                                        Foreground="#F5F5F5"
                                                        TextTrimming="CharacterEllipsis" />
                                                    <TextBlock
                                                        Text="{Binding Description}"
                                                        FontSize="10"
                                                        Foreground="#71717A"
                                                        TextTrimming="CharacterEllipsis"
                                                        Margin="0,2,0,0" />
                                                </StackPanel>

                                                <ui:SymbolIcon
                                                    Grid.Column="2"
                                                    Symbol="PeopleTeam16"
                                                    FontSize="14"
                                                    Foreground="#F97316"
                                                    VerticalAlignment="Center" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- ============================================ -->
            <!-- FOOTER : Actions + Close                      -->
            <!-- ============================================ -->
            <Border
                Grid.Row="2"
                BorderBrush="#3F3F46"
                BorderThickness="0,1,0,0"
                Padding="0,12,0,0"
                Margin="0,12,0,0">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Left: Quick actions -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <ui:Button
                            Content="Égaliser"
                            Appearance="Secondary"
                            Command="{Binding SyncBothCommand}"
                            Height="36"
                            Padding="16,0"
                            Margin="0,0,8,0"
                            ToolTip="Copier tous les groupes dans les deux sens">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="ArrowSync24" />
                            </ui:Button.Icon>
                        </ui:Button>

                        <ui:Button
                            Appearance="Secondary"
                            Command="{Binding CopyAllToUser2Command}"
                            Height="36"
                            Padding="16,0"
                            Margin="0,0,8,0"
                            ToolTip="Copier tous les groupes de User 1 vers User 2">
                            <ui:Button.Content>
                                <TextBlock VerticalAlignment="Center">
                                    <Run Text="{Binding User1UserName, Mode=OneWay}" />
                                    <Run Text=" → " />
                                    <Run Text="{Binding User2UserName, Mode=OneWay}" />
                                </TextBlock>
                            </ui:Button.Content>
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="ArrowRight24" />
                            </ui:Button.Icon>
                        </ui:Button>

                        <ui:Button
                            Appearance="Secondary"
                            Command="{Binding CopyAllToUser1Command}"
                            Height="36"
                            Padding="16,0"
                            ToolTip="Copier tous les groupes de User 2 vers User 1">
                            <ui:Button.Content>
                                <TextBlock VerticalAlignment="Center">
                                    <Run Text="{Binding User2UserName, Mode=OneWay}" />
                                    <Run Text=" → " />
                                    <Run Text="{Binding User1UserName, Mode=OneWay}" />
                                </TextBlock>
                            </ui:Button.Content>
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="ArrowLeft24" />
                            </ui:Button.Icon>
                        </ui:Button>
                    </StackPanel>

                    <!-- Status message -->
                    <TextBlock
                        Grid.Column="0"
                        Text="{Binding StatusMessage}"
                        FontSize="12"
                        Foreground="#10B981"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Margin="0,0,16,0" />

                    <!-- Right: Apply + Close -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <ui:Button
                            Content="Appliquer"
                            Appearance="Primary"
                            Command="{Binding ApplyChangesCommand}"
                            IsEnabled="{Binding HasChanges}"
                            Height="36"
                            Padding="24,0"
                            Margin="0,0,8,0">
                            <ui:Button.Icon>
                                <ui:SymbolIcon Symbol="Checkmark24" />
                            </ui:Button.Icon>
                        </ui:Button>

                        <ui:Button
                            Content="Fermer"
                            Appearance="Secondary"
                            Click="CloseButton_Click"
                            Height="36"
                            Padding="24,0" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- === TITLEBAR === -->
        <ui:TitleBar
            x:Name="TitleBar"
            Title="Comparaison d'utilisateurs"
            Grid.Row="0"
            CloseWindowByDoubleClickOnIcon="True">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Assets/logo.png" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>
    </Grid>
</ui:FluentWindow>
