<ui:FluentWindow
    x:Class="ADFlowManager.UI.Views.Dialogs.CopyFromUserDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Copier depuis utilisateur"
    Width="600"
    Height="700"
    d:DesignHeight="700"
    d:DesignWidth="600"
    ExtendsContentIntoTitleBar="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ===== HEADER ===== -->
        <Grid Grid.Row="0" Margin="24,16,24,16">
            <TextBlock
                Text="Copier depuis utilisateur"
                FontSize="24"
                FontWeight="Bold"
                Foreground="#F5F5F5"
                VerticalAlignment="Center" />

            <ui:Button
                Appearance="Secondary"
                Command="{Binding CloseCommand}"
                Width="44"
                Height="44"
                HorizontalAlignment="Right">
                <ui:Button.Icon>
                    <ui:SymbolIcon Symbol="Dismiss24" />
                </ui:Button.Icon>
            </ui:Button>
        </Grid>

        <!-- ===== SEARCH ===== -->
        <Border
            Grid.Row="1"
            Background="#1E1E1E"
            CornerRadius="8"
            Padding="16"
            Margin="24,0,24,16">
            <ui:TextBox
                Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                PlaceholderText="Rechercher un utilisateur (nom, login, email...)"
                Height="44"
                FontSize="14">
                <ui:TextBox.Icon>
                    <ui:SymbolIcon Symbol="Search24" />
                </ui:TextBox.Icon>
            </ui:TextBox>
        </Border>

        <!-- ===== USERS LIST ===== -->
        <Border
            Grid.Row="2"
            Background="#1E1E1E"
            CornerRadius="8"
            Margin="24,0,24,16"
            Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Header count -->
                <Border
                    Background="#8B5CF620"
                    CornerRadius="8,8,0,0"
                    Padding="16,12">
                    <TextBlock
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="#8B5CF6">
                        <Run Text="{Binding FilteredUsers.Count, Mode=OneWay}" />
                        <Run Text="utilisateur(s) trouvé(s)" />
                    </TextBlock>
                </Border>

                <!-- Scrollable list -->
                <ScrollViewer
                    Grid.Row="1"
                    VerticalScrollBarVisibility="Auto"
                    Padding="12">
                    <ItemsControl ItemsSource="{Binding FilteredUsers}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Background="#252525"
                                    CornerRadius="6"
                                    Padding="12"
                                    Margin="0,0,0,8"
                                    Cursor="Hand">
                                    <Border.InputBindings>
                                        <MouseBinding
                                            MouseAction="LeftClick"
                                            Command="{Binding DataContext.SelectUserCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}" />
                                    </Border.InputBindings>

                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="BorderThickness" Value="1" />
                                            <Setter Property="BorderBrush" Value="Transparent" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                    <Setter Property="Background" Value="#8B5CF620" />
                                                    <Setter Property="BorderBrush" Value="#8B5CF6" />
                                                </DataTrigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#2D2D30" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <!-- Avatar -->
                                        <Border
                                            Width="48"
                                            Height="48"
                                            Background="#3B2D5E"
                                            CornerRadius="24"
                                            Margin="0,0,12,0">
                                            <TextBlock
                                                Text="{Binding Initials}"
                                                FontSize="18"
                                                FontWeight="Bold"
                                                Foreground="#8B5CF6"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center" />
                                        </Border>

                                        <!-- Info -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock
                                                Text="{Binding User.DisplayName}"
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Foreground="#F5F5F5" />
                                            <TextBlock
                                                Text="{Binding User.UserName}"
                                                FontSize="12"
                                                Foreground="#71717A"
                                                Margin="0,2,0,0" />
                                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                <TextBlock
                                                    Text="{Binding User.Department}"
                                                    FontSize="11"
                                                    Foreground="#A1A1AA"
                                                    Visibility="{Binding User.Department, Converter={StaticResource StringToVisibilityConverter}}" />
                                                <TextBlock
                                                    Text=" · "
                                                    FontSize="11"
                                                    Foreground="#52525B"
                                                    Visibility="{Binding User.Department, Converter={StaticResource StringToVisibilityConverter}}" />
                                                <TextBlock
                                                    FontSize="11"
                                                    Foreground="#A1A1AA">
                                                    <Run Text="{Binding User.Groups.Count, Mode=OneWay}" />
                                                    <Run Text="groupes" />
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Check icon si sélectionné -->
                                        <ui:SymbolIcon
                                            Grid.Column="2"
                                            Symbol="Checkmark24"
                                            FontSize="24"
                                            Foreground="#8B5CF6"
                                            VerticalAlignment="Center"
                                            Visibility="{Binding IsSelected, Converter={StaticResource BoolToVisibilityConverter}}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- ===== PREVIEW ===== -->
        <Border
            Grid.Row="3"
            Background="#8B5CF620"
            CornerRadius="8"
            Padding="16"
            Margin="24,0,24,16"
            Visibility="{Binding HasSelectedUser, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel>
                <TextBlock
                    Text="Données qui seront copiées :"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="#8B5CF6"
                    Margin="0,0,0,12" />

                <!-- Organisation -->
                <TextBlock
                    FontSize="13"
                    Foreground="#F5F5F5"
                    Margin="0,0,0,4"
                    Visibility="{Binding SelectedUser.User.JobTitle, Converter={StaticResource StringToVisibilityConverter}}">
                    <Run Text="Poste :" Foreground="#A1A1AA" />
                    <Run Text="{Binding SelectedUser.User.JobTitle, Mode=OneWay}" FontWeight="SemiBold" />
                </TextBlock>

                <TextBlock
                    FontSize="13"
                    Foreground="#F5F5F5"
                    Margin="0,0,0,4"
                    Visibility="{Binding SelectedUser.User.Department, Converter={StaticResource StringToVisibilityConverter}}">
                    <Run Text="Département :" Foreground="#A1A1AA" />
                    <Run Text="{Binding SelectedUser.User.Department, Mode=OneWay}" FontWeight="SemiBold" />
                </TextBlock>

                <TextBlock
                    FontSize="13"
                    Foreground="#F5F5F5"
                    Margin="0,0,0,4"
                    Visibility="{Binding SelectedUser.User.Company, Converter={StaticResource StringToVisibilityConverter}}">
                    <Run Text="Entreprise :" Foreground="#A1A1AA" />
                    <Run Text="{Binding SelectedUser.User.Company, Mode=OneWay}" FontWeight="SemiBold" />
                </TextBlock>

                <TextBlock
                    FontSize="13"
                    Foreground="#F5F5F5"
                    Margin="0,0,0,4"
                    Visibility="{Binding SelectedUser.User.Office, Converter={StaticResource StringToVisibilityConverter}}">
                    <Run Text="Bureau :" Foreground="#A1A1AA" />
                    <Run Text="{Binding SelectedUser.User.Office, Mode=OneWay}" FontWeight="SemiBold" />
                </TextBlock>

                <TextBlock
                    FontSize="13"
                    Foreground="#F5F5F5"
                    Margin="0,0,0,4"
                    Visibility="{Binding SelectedUser.User.Description, Converter={StaticResource StringToVisibilityConverter}}">
                    <Run Text="Description :" Foreground="#A1A1AA" />
                    <Run Text="{Binding SelectedUser.User.Description, Mode=OneWay}" FontWeight="SemiBold" />
                </TextBlock>

                <!-- Groupes count -->
                <TextBlock
                    FontSize="13"
                    Foreground="#10B981"
                    FontWeight="SemiBold"
                    Margin="0,8,0,0">
                    <Run Text="{Binding CopyableGroupsCount, Mode=OneWay}" />
                    <Run Text="groupe(s) copiable(s) (hors système)" />
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- ===== FOOTER ===== -->
        <Border
            Grid.Row="4"
            Background="#1E1E1E"
            BorderBrush="#3F3F46"
            BorderThickness="0,1,0,0"
            Padding="24,16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <ui:Button
                    Content="Annuler"
                    Appearance="Secondary"
                    Command="{Binding CloseCommand}"
                    Height="44"
                    Padding="20,0"
                    Margin="0,0,12,0" />

                <ui:Button
                    Content="Copier les données"
                    Appearance="Primary"
                    Command="{Binding CopyCommand}"
                    IsEnabled="{Binding HasSelectedUser}"
                    Height="44"
                    Padding="20,0">
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="Copy24" />
                    </ui:Button.Icon>
                </ui:Button>
            </StackPanel>
        </Border>
    </Grid>
</ui:FluentWindow>
