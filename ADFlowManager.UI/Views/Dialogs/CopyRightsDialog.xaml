<ui:FluentWindow
    x:Class="ADFlowManager.UI.Views.Dialogs.CopyRightsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:local="clr-namespace:ADFlowManager.UI.Views.Dialogs"
    Title="Copier les droits"
    Width="600"
    Height="550"
    d:DesignHeight="550"
    d:DesignWidth="600"
    ExtendsContentIntoTitleBar="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- === CONTENT === -->
        <Grid Grid.Row="1" Margin="24,0,24,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- ===== SUBTITLE ===== -->
            <TextBlock
                Grid.Row="0"
                FontSize="14"
                Foreground="#A1A1AA"
                Margin="0,0,0,12">
                <Run Text="Copier les groupes vers : " />
                <Run Text="{Binding TargetDisplayName}" FontWeight="SemiBold" Foreground="#8B5CF6" />
            </TextBlock>

            <!-- ===== SEARCH BAR ===== -->
            <ui:TextBox
                Grid.Row="1"
                Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                PlaceholderText="Rechercher un utilisateur source..."
                Height="44"
                Background="#2D2D30"
                Foreground="#F5F5F5"
                BorderBrush="#3F3F46"
                Margin="0,0,0,12">
                <ui:TextBox.Icon>
                    <ui:SymbolIcon Symbol="Search24" Foreground="#8B5CF6" />
                </ui:TextBox.Icon>
            </ui:TextBox>

            <!-- ===== USERS LIST ===== -->
            <Border
                Grid.Row="2"
                Background="#1E1E1E"
                BorderBrush="#3F3F46"
                BorderThickness="1"
                CornerRadius="8"
                ClipToBounds="True"
                Margin="0,0,0,12">

                <ListBox
                    ItemsSource="{Binding FilteredUsers}"
                    SelectedItem="{Binding SelectedSourceUser}"
                    Background="Transparent"
                    BorderThickness="0"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="Margin" Value="0" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border
                                            x:Name="Bd"
                                            Background="Transparent"
                                            BorderBrush="#2D2D30"
                                            BorderThickness="0,0,0,1"
                                            Padding="12,10">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#108B5CF6" />
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="#208B5CF6" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Avatar -->
                                <Border
                                    Grid.Column="0"
                                    Width="40"
                                    Height="40"
                                    Background="#3B2D5E"
                                    CornerRadius="20"
                                    Margin="0,0,12,0">
                                    <TextBlock
                                        Text="{Binding DisplayName, Converter={StaticResource InitialsConverter}}"
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Foreground="#8B5CF6"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center" />
                                </Border>

                                <!-- Info -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock
                                        Text="{Binding DisplayName}"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Foreground="#F5F5F5" />
                                    <TextBlock
                                        Text="{Binding UserName}"
                                        FontSize="12"
                                        Foreground="#71717A"
                                        Margin="0,2,0,0" />
                                </StackPanel>

                                <!-- Group count badge -->
                                <Border
                                    Grid.Column="2"
                                    Background="#1A8B5CF6"
                                    CornerRadius="12"
                                    Padding="8,4"
                                    VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="#8B5CF6">
                                        <Run Text="{Binding Groups.Count, Mode=OneWay}" />
                                        <Run Text=" groupes" />
                                    </TextBlock>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>

            <!-- ===== PREVIEW GROUPES (visible quand user sélectionné) ===== -->
            <Border
                Grid.Row="3"
                Background="#1A8B5CF6"
                BorderBrush="#3B2D5E"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16,12"
                Margin="0,0,0,12"
                Visibility="{Binding SelectedSourceUser, Converter={StaticResource NullToVisibilityConverter}}">

                <StackPanel>
                    <TextBlock
                        Text="Groupes qui seront copiés"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Foreground="#8B5CF6"
                        Margin="0,0,0,8" />

                    <ItemsControl
                        ItemsSource="{Binding SelectedSourceUser.Groups}"
                        MaxHeight="100">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                    <ui:SymbolIcon
                                        Symbol="PeopleTeam16"
                                        FontSize="12"
                                        Foreground="#8B5CF6"
                                        Margin="0,0,6,0" />
                                    <TextBlock
                                        Text="{Binding GroupName}"
                                        FontSize="13"
                                        Foreground="#F5F5F5" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock
                        FontSize="12"
                        Foreground="#A1A1AA"
                        Margin="0,6,0,0">
                        <Run Text="{Binding SelectedSourceUser.Groups.Count, Mode=OneWay}" />
                        <Run Text=" groupe(s) seront copiés" />
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- ===== FOOTER ===== -->
            <Border
                Grid.Row="4"
                BorderBrush="#3F3F46"
                BorderThickness="0,1,0,0"
                Padding="0,12,0,0">

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <ui:Button
                        Content="Annuler"
                        Appearance="Secondary"
                        Click="CancelButton_Click"
                        Height="36"
                        Padding="20,0"
                        Margin="0,0,8,0" />

                    <ui:Button
                        Content="Copier les droits"
                        Appearance="Primary"
                        Click="CopyButton_Click"
                        IsEnabled="{Binding CanCopyRights}"
                        Height="36"
                        Padding="20,0">
                        <ui:Button.Icon>
                            <ui:SymbolIcon Symbol="Copy24" />
                        </ui:Button.Icon>
                    </ui:Button>
                </StackPanel>
            </Border>
        </Grid>

        <!-- === TITLEBAR === -->
        <ui:TitleBar
            x:Name="TitleBar"
            Title="Copier les droits"
            Grid.Row="0"
            CloseWindowByDoubleClickOnIcon="True">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Assets/logo.png" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>
    </Grid>
</ui:FluentWindow>
