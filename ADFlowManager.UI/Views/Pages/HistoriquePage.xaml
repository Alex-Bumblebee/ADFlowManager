<Page
    x:Class="ADFlowManager.UI.Views.Pages.HistoriquePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:local="clr-namespace:ADFlowManager.UI.Views.Pages"
    xmlns:ext="clr-namespace:ADFlowManager.UI.Extensions"
    Title="{ext:Localized Nav_History}"
    d:DesignHeight="800"
    d:DesignWidth="1200"
    ScrollViewer.VerticalScrollBarVisibility="Disabled"
    mc:Ignorable="d">

    <Grid Margin="24,8,24,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- === HEADER === -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="{ext:Localized History_Title}" FontSize="28" FontWeight="Bold" Foreground="#F5F5F5" />
                <TextBlock Foreground="#71717A" FontSize="13" Margin="0,4,0,0">
                    <Run Text="{ext:Localized History_Total}" />
                    <Run Text="{Binding ViewModel.TotalLogs, Mode=OneWay}" FontWeight="SemiBold" Foreground="#8B5CF6" />
                    <Run Text="{ext:Localized History_Today}" />
                    <Run Text="{Binding ViewModel.LogsToday, Mode=OneWay}" FontWeight="SemiBold" Foreground="#8B5CF6" />
                    <Run Text="{ext:Localized History_ThisWeek}" />
                    <Run Text="{Binding ViewModel.LogsThisWeek, Mode=OneWay}" FontWeight="SemiBold" Foreground="#8B5CF6" />
                </TextBlock>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <ui:Button
                    Content="{ext:Localized History_ExportCsv}"
                    Appearance="Secondary"
                    Command="{Binding ViewModel.ExportCsvCommand}"
                    Height="36"
                    Padding="16,0"
                    Margin="0,0,8,0">
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="ArrowDownload24" />
                    </ui:Button.Icon>
                </ui:Button>

                <ui:Button
                    Content="{ext:Localized History_Refresh}"
                    Appearance="Primary"
                    Command="{Binding ViewModel.RefreshCommand}"
                    Height="36"
                    Padding="16,0">
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="ArrowSync24" />
                    </ui:Button.Icon>
                </ui:Button>
            </StackPanel>
        </Grid>

        <!-- === FILTRES === -->
        <Border
            Grid.Row="1"
            Background="#1E1E1E"
            BorderBrush="#3F3F46"
            BorderThickness="1"
            CornerRadius="8"
            Padding="16"
            Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="12" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="12" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="12" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="12" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="12" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="12" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Recherche texte -->
                <ui:TextBox
                    Grid.Column="0"
                    Text="{Binding ViewModel.SearchText, UpdateSourceTrigger=PropertyChanged}"
                    PlaceholderText="{ext:Localized History_SearchPlaceholder}"
                    Background="#2D2D30"
                    Foreground="#F5F5F5"
                    BorderBrush="#3F3F46"
                    Height="36" />

                <!-- Date dÃ©but -->
                <DatePicker
                    Grid.Column="2"
                    SelectedDate="{Binding ViewModel.StartDate}"
                    Background="#2D2D30"
                    Foreground="#F5F5F5"
                    BorderBrush="#3F3F46"
                    Width="140"
                    Height="36" />

                <!-- Date fin -->
                <DatePicker
                    Grid.Column="4"
                    SelectedDate="{Binding ViewModel.EndDate}"
                    Background="#2D2D30"
                    Foreground="#F5F5F5"
                    BorderBrush="#3F3F46"
                    Width="140"
                    Height="36" />

                <!-- Action type -->
                <ComboBox
                    Grid.Column="6"
                    ItemsSource="{Binding ViewModel.ActionTypes}"
                    SelectedIndex="{Binding ViewModel.SelectedActionIndex}"
                    Background="#2D2D30"
                    Foreground="#F5F5F5"
                    BorderBrush="#3F3F46"
                    Width="160"
                    Height="36" />

                <!-- Entity type -->
                <ComboBox
                    Grid.Column="8"
                    ItemsSource="{Binding ViewModel.EntityTypes}"
                    SelectedIndex="{Binding ViewModel.SelectedEntityIndex}"
                    Background="#2D2D30"
                    Foreground="#F5F5F5"
                    BorderBrush="#3F3F46"
                    Width="120"
                    Height="36" />

                <!-- Appliquer filtres -->
                <ui:Button
                    Grid.Column="10"
                    Content="{ext:Localized History_Filter}"
                    Appearance="Primary"
                    Command="{Binding ViewModel.ApplyFiltersCommand}"
                    Height="36"
                    Padding="12,0" />

                <!-- Reset filtres -->
                <ui:Button
                    Grid.Column="12"
                    Appearance="Secondary"
                    Command="{Binding ViewModel.ClearFiltersCommand}"
                    Height="36"
                    Width="36"
                    Padding="0"
                    ToolTip="{ext:Localized History_ResetFilters}">
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="Dismiss24" />
                    </ui:Button.Icon>
                </ui:Button>
            </Grid>
        </Border>

        <!-- === DATAGRID LOGS === -->
        <Border
            Grid.Row="2"
            Background="#1E1E1E"
            BorderBrush="#3F3F46"
            BorderThickness="1"
            CornerRadius="8"
            Padding="0">

            <Grid>
                <!-- Loading overlay -->
                <StackPanel
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Visibility="{Binding ViewModel.IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ui:ProgressRing IsIndeterminate="True" Width="48" Height="48" />
                    <TextBlock Text="{ext:Localized History_Loading}" Foreground="#71717A" FontSize="13" HorizontalAlignment="Center" Margin="0,8,0,0" />
                </StackPanel>

                <!-- Empty state -->
                <StackPanel
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding ViewModel.HasNoLogs}" Value="True" />
                                        <Condition Binding="{Binding ViewModel.IsLoading}" Value="False" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible" />
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <ui:SymbolIcon Symbol="History24" FontSize="48" Foreground="#3F3F46" HorizontalAlignment="Center" />
                    <TextBlock Text="{ext:Localized History_NoActions}" FontSize="16" Foreground="#71717A" HorizontalAlignment="Center" Margin="0,12,0,0" />
                    <TextBlock Text="{ext:Localized History_NoActionsSub}" FontSize="12" Foreground="#52525B" HorizontalAlignment="Center" Margin="0,4,0,0" />
                </StackPanel>

                <!-- DataGrid -->
                <DataGrid
                    ItemsSource="{Binding ViewModel.Logs}"
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    CanUserAddRows="False"
                    CanUserDeleteRows="False"
                    CanUserSortColumns="True"
                    GridLinesVisibility="Horizontal"
                    HorizontalGridLinesBrush="#2D2D30"
                    Background="Transparent"
                    Foreground="#F5F5F5"
                    BorderThickness="0"
                    RowBackground="#1E1E1E"
                    AlternatingRowBackground="#252528"
                    HeadersVisibility="Column"
                    SelectionMode="Single"
                    FontSize="13">

                    <DataGrid.Style>
                        <Style TargetType="DataGrid">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ViewModel.HasNoLogs}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Style>

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#161618" />
                            <Setter Property="Foreground" Value="#A1A1AA" />
                            <Setter Property="Padding" Value="12,8" />
                            <Setter Property="FontSize" Value="12" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                            <Setter Property="BorderBrush" Value="#3F3F46" />
                            <Setter Property="BorderThickness" Value="0,0,0,1" />
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="12,6" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#2D2D44" />
                                    <Setter Property="Foreground" Value="#F5F5F5" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="{ext:Localized History_ColDate}" Binding="{Binding Timestamp, StringFormat='{}{0:dd/MM/yyyy HH:mm:ss}'}" Width="160" />
                        <DataGridTextColumn Header="{ext:Localized History_ColUser}" Binding="{Binding Username}" Width="130" />
                        <DataGridTextColumn Header="{ext:Localized History_ColAction}" Binding="{Binding ActionType}" Width="170" />
                        <DataGridTextColumn Header="{ext:Localized History_ColType}" Binding="{Binding EntityType}" Width="80" />
                        <DataGridTextColumn Header="{ext:Localized History_ColEntity}" Binding="{Binding EntityDisplayName}" Width="180" />
                        <DataGridTextColumn Header="{ext:Localized History_ColResult}" Binding="{Binding Result}" Width="80" />
                        <DataGridTextColumn Header="{ext:Localized History_ColDetails}" Binding="{Binding Details}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Page>
